@model DoAn_web.Models.Category

@{
    ViewBag.Title = "Xác nhận xóa danh mục"; // 1. Tiêu đề rõ ràng hơn
    Layout = "~/Areas/Admin2026/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm border-danger">

    <div class="card-header">
        <h4 class="mb-0">@ViewBag.Title</h4>
    </div>

    <div class="card-body">

        <div class="alert alert-danger" role="alert">
            <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa vĩnh viễn danh mục này không?
            <br>
            Hành động này không thể hoàn tác.
        </div>

        <h5>Thông tin danh mục sắp xóa:</h5>

        <dl class="row">
            <dt class="col-sm-3 col-form-label">
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>
            <dd class="col-sm-9">
                <p class="form-control-plaintext"><strong>@Html.DisplayFor(model => model.CategoryName)</strong></p>
            </dd>
        </dl>

    </div>

    <div class="card-footer bg-light">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <input type="submit" value="Xác nhận Xóa" class="btn btn-danger" />

            @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-secondary ms-2" })
        }
    </div>
</div>