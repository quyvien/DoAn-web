@model IEnumerable<DoAn_web.Models.Category>

@{

    ViewBag.Title = "Quản lý Danh mục";
    Layout = "~/Areas/Admin2026/Views/Shared/_LayoutAdmin.cshtml";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>Thông báo:</strong> @TempData["Error"]
        @* Nút X nhỏ để tắt thông báo *@
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p class="mb-4">
    @Html.ActionLink(" Thêm danh mục mới", "Create", null, new { @class = "btn btn-primary" })
    @* Thêm icon: new { @class = "btn btn-primary bi bi-plus-lg" } *@
</p>

<div class="card shadow-sm">
    <div class="card-body">

        <table class="table table-striped table-hover align-middle">

            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th class="text-end" style="width: 200px;">Hành động</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>

                        <td class="text-end">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-sm btn-warning" })
                            
                            @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-sm btn-danger ms-1" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
