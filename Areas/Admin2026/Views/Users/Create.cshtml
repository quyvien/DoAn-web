@model DoAn_web.Models.User

@{
    ViewBag.Title = "Thêm User Mới";
    Layout = "~/Areas/Admin2026/Views/Shared/_LayoutAdmin.cshtml";

    // Tạo danh sách quyền để chọn
    var roleList = new List<SelectListItem> {
        new SelectListItem { Text = "Quản trị viên (Admin)", Value = "A" },
        new SelectListItem { Text = "Khách hàng (Customer)", Value = "C" }
    };
}

<div class="row justify-content-center py-4">
    <div class="col-md-6">
        <div class="card shadow border-0">
            <div class="card-header bg-primary text-white fw-bold">
                <i class="fas fa-user-plus me-2"></i>Thêm Tài khoản Mới
            </div>
            <div class="card-body p-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên đăng nhập</label>
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Ví dụ: admin2, staff01..." } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mật khẩu</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Phân quyền</label>
                        @Html.DropDownListFor(model => model.UserRole, roleList, "--- Chọn quyền ---", new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.UserRole, "", new { @class = "text-danger small" })
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary fw-bold">Tạo Tài khoản</button>
                        <a href="@Url.Action("Index")" class="btn btn-light">Hủy bỏ</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>