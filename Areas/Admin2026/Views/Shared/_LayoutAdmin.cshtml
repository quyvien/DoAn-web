<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Trang Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link href="~/Content/style_K/Style_Admin.css" rel="stylesheet" />
</head>
<body>

    <div class="sidebar d-flex flex-column">
        <div class="sidebar-header">
            <a href="@Url.Action("Index", "Home", new { area = "" })" class="text-white text-decoration-none">
                <i class="bi bi-shop"></i> MyStore
            </a>
        </div>

        <ul class="nav flex-column flex-grow-1">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Home", new { area = "Admin2026" })">
                    <i class="bi bi-grid-fill"></i> Bảng điều khiển
                </a>
            </li>

            <li class="sidebar-divider">Bán hàng</li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Orders", new { area = "Admin2026" })">
                    <i class="bi bi-receipt"></i> Quản lý Đơn hàng
                </a>
            </li>

            <li class="sidebar-divider">Kho hàng</li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Products", new { area = "Admin2026" })">
                    <i class="bi bi-box-seam-fill"></i> Quản lý Sản phẩm
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Categories", new { area = "Admin2026" })">
                    <i class="bi bi-tags-fill"></i> Quản lý Danh mục
                </a>
            </li>

            <li class="sidebar-divider">Người dùng</li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Customers", new { area = "Admin2026" })">
                    <i class="bi bi-person-circle"></i> Quản lý Khách hàng
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Users", new { area = "Admin2026" })">
                    <i class="bi bi-person-fill-gear"></i> Quản lý Tài khoản
                </a>
            </li>
        </ul>

        <div class="mt-auto">
            <hr class="text-secondary">
            <a class="nav-link" href="@Url.Action("Logout", "Account", new { area = "" })">
                <i class="bi bi-box-arrow-left"></i> Đăng xuất
            </a>
        </div>
    </div>

    <div class="main-content">

        <nav class="admin-header d-flex justify-content-between align-items-center">

            <h4 class="m-0">@ViewData["Title"]</h4>

            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="ms-2 d-none d-sm-inline">Xin chào, @(Session["UserRole"] ?? "Admin")</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="dropdownUser">
                    <li><a class="dropdown-item" href="#">Hồ sơ</a></li>
                    <li><a class="dropdown-item" href="#">Cài đặt</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="@Url.Action("Logout", "Account", new { area = "" })">Đăng xuất</a></li>
                </ul>
            </div>
        </nav>

        <main class="content-area">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>