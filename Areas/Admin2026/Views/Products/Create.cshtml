@model DoAn_web.Models.Product

@{
    ViewBag.Title = "Thêm sản phẩm mới";
    Layout = "~/Areas/Admin2026/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0">@ViewBag.Title</h5>
    </div>

    <div class="card-body">

        @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="row mb-3">
                @Html.LabelFor(model => model.CategoryID, "Danh mục", htmlAttributes: new { @class = "col-sm-2 col-form-label fw-bold" })
                <div class="col-sm-10">
                    @Html.DropDownList("CategoryID", null, "--- Chọn danh mục ---", htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.ProductName, "Tên sản phẩm", htmlAttributes: new { @class = "col-sm-2 col-form-label fw-bold" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-3" id="containerStorage">
                @Html.LabelFor(model => model.StorageID, "Dung lượng (GB)", htmlAttributes: new { @class = "col-sm-2 col-form-label fw-bold" })
                <div class="col-sm-10">
                    @Html.DropDownList("StorageID", null, "Chọn dung lượng", htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.StorageID, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="row mb-3" id="containerColor">
                @Html.LabelFor(model => model.ColorID, "Màu sắc", htmlAttributes: new { @class = "col-sm-2 col-form-label fw-bold" })
                <div class="col-sm-10">
                    @Html.DropDownList("ColorID", null, "Chọn màu sắc", htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.ColorID, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.ProductDecription, "Mô tả", htmlAttributes: new { @class = "col-sm-2 col-form-label fw-bold" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.ProductDecription, new { @class = "form-control", rows = 5 })
                    @Html.ValidationMessageFor(model => model.ProductDecription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.ProductPrice, "Giá bán", htmlAttributes: new { @class = "col-sm-2 col-form-label fw-bold" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.ProductPrice, new { htmlAttributes = new { @class = "form-control", type = "number", step = "1000" } })
                    @Html.ValidationMessageFor(model => model.ProductPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label fw-bold">Tải hình ảnh</label>
                <div class="col-sm-10">
                    <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                    @Html.ValidationMessageFor(model => model.ProductImage, "", new { @class = "text-danger" })

                    <img id="imagePreview" src="" alt="Xem trước ảnh"
                         style="max-width: 200px; max-height: 200px; margin-top: 15px; display: none;" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                    @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        // ==========================================
        // 1. XỬ LÝ ẨN/HIỆN GB VÀ MÀU THEO DANH MỤC
        // ==========================================
        function toggleAttributes() {
            var categorySelect = document.getElementById("CategoryID");
            if (!categorySelect) return;

            var categoryId = categorySelect.value;

            // Danh sách ID danh mục KHÔNG CẦN GB và MÀU
            // 9=Phụ kiện, 11=Gia dụng, 12=Camera, 13=Âm thanh
            var noSpecCategories = ["9", "11", "12", "13", "10"];

            var divStorage = document.getElementById("containerStorage");
            var divColor = document.getElementById("containerColor");
            var dropStorage = document.getElementById("StorageID");
            var dropColor = document.getElementById("ColorID");

            // Chỉ chạy nếu các thẻ này tồn tại
            if (divStorage && divColor && dropStorage && dropColor) {

                // Nếu ID danh mục nằm trong danh sách "miễn nhiễm"
                if (noSpecCategories.includes(categoryId)) {
                    // Ẩn đi
                    divStorage.style.display = "none";
                    divColor.style.display = "none";

                    // Reset giá trị chọn về rỗng
                    dropStorage.value = "";
                    dropColor.value = "";
                } else {
                    // Hiện lại
                    divStorage.style.display = "flex";
                    divColor.style.display = "flex";
                }
            }
        }

        // Chạy hàm ngay khi trang tải xong
        document.addEventListener("DOMContentLoaded", function () {
            toggleAttributes();
        });

        // Chạy hàm mỗi khi đổi danh mục
        document.getElementById("CategoryID").addEventListener("change", function () {
            toggleAttributes();
        });


        // ==========================================
        // 2. XỬ LÝ ẢNH PREVIEW
        // ==========================================
        document.getElementById("ImageFile").addEventListener("change", function (event) {
            var preview = document.getElementById("imagePreview");
            var file = event.target.files[0];

            if (file) {
                var objectUrl = URL.createObjectURL(file);
                preview.src = objectUrl;
                preview.style.display = "block";
                preview.onload = function () {
                    URL.revokeObjectURL(preview.src);
                }
            } else {
                preview.src = "";
                preview.style.display = "none";
            }
        });
    </script>
}