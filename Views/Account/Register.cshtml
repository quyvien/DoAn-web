
@model DoAn_web.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link href="~/Content/style_K/Style_login.css" rel="stylesheet" />


<div class="custom-form-container">
    <h2>Đăng ký tài khoản</h2>
    <hr />

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row">
            <label class="custom-label">Username</label>
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "custom-input" } })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>

        <div class="form-row">
            <label class="custom-label">Mật khẩu</label>
            @Html.PasswordFor(model => model.Password, new { @class = "custom-input" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <hr />
        <h4>Thông tin cá nhân</h4>

        <div class="form-row">
            <label class="custom-label">Họ tên</label>
            @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "custom-input" } })
            @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
        </div>

        <div class="form-row">
            <label class="custom-label">Số điện thoại</label>
            @Html.EditorFor(model => model.CustomerPhone, new { htmlAttributes = new { @class = "custom-input" } })
            @Html.ValidationMessageFor(model => model.CustomerPhone, "", new { @class = "text-danger" })
        </div>

        <div class="form-row">
            <label class="custom-label">Email</label>
            @Html.EditorFor(model => model.CustomerEmail, new { htmlAttributes = new { @class = "custom-input" } })
            @Html.ValidationMessageFor(model => model.CustomerEmail, "", new { @class = "text-danger" })
        </div>

        <div class="form-row">
            <label class="custom-label">Địa chỉ</label>
            @Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "custom-input" } })
        </div>

        <div class="form-row">
            <input type="submit" value="Tạo tài khoản" class="custom-button button-primary" />
        </div>
    }
</div>