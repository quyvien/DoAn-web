
@{
    ViewBag.Title = "OrderConfirmation";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container" style="text-align: center; padding: 50px;">
    <h2> ĐẶT HÀNG THÀNH CÔNG </h2>
    <hr />
    @if (TempData["OrderSuccessMessage"] != null)
    {
        <p style="font-size: 1.2em; color: #28a745;">
            @TempData["OrderSuccessMessage"]
        </p>
    }   
    else
    {
        <p>Cảm ơn bạn đã mua hàng tại cửa hàng của chúng tôi!</p>
    }

    <div style="margin-top: 30px;">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary" style="padding: 10px 20px;">
            Tiếp tục mua sắm
        </a>
    </div>
</div>

